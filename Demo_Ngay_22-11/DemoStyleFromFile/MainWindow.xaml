<Window x:Class="DemoStyleFromFile.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoStyleFromFile"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="StylesFile.xaml"/>
    </Window.Resources>
    <StackPanel>
        <Button x:Name="btnTest" Content="Test" Margin="10"/>
        <Button x:Name="btnExit" Content="Exit" Margin="10" Style="{StaticResource styleButtonFromFile }"/>
    </StackPanel>
</Window>
